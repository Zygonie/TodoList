  body(ng-app="appTodoList", ng-controller="todoListCtrl")
    div.navbar.navbar-inverse.navbar-fixed-top(ng-init="initLists()")
       div.navbar-inner
         div.container
            button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
               span.icon-bar
               span.icon-bar
               span.icon-bar
            a.brand(href='/') SmartTodoList
            div.nav-collapse.collapse
              ul.nav                 
                li.dropdown
                   a.dropdown-toggle(href='#', data-toggle="dropdown") Mes Listes                            
                     b.caret
                   ul.dropdown-menu                            
                     li(ng-repeat="item in data.Lists | orderBy:'creationDate'")
                       a(ng:click="showDetails(item)") {{item.title}} 
            if !user        
               div.btn-toolbar.pull-right
                  a.btn.btn-primary(href='login', type='button') Log in
                  a.btn.btn-primary(href='register', type='button') Register
            else
               a.btn.btn-primary.pull-right(href='logout', type='button') Log out         
      
    div.container-fluid.wrapper
      div(ng-view)